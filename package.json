{
  "name": "rxjs-example",
  "version": "0.0.1",
  "description": "Example project to illustrate RxJS features.",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "start": "tsc && node dist/src/index.js",
    "test": "jest --watch --coverage",
    "test:ci": "jest --coverage",
    "build": "tsc"
  },
  "keywords": [
    "rxjs"
  ],
  "author": "Ammar Najjar <najjarammar@protonmail.com>",
  "license": "MIT",
  "dependencies": {
    "jasmine-marbles": "0.6.0",
    "rxjs": "6.5.5",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.{js,jsx,ts,tsx}",
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index*",
      "!<rootDir>/node_modules/",
      "!<rootDir>/coverage/",
      "!<rootDir>/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "coverageReporters": [
      "text"
    ]
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "eslint-plugin-jest": "23.0.4",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "prettier": "2.0.4",
    "pretty-quick": "2.0.1",
    "ts-jest": "25.3.1",
    "ts-node": "8.8.2",
    "tslint": "6.1.1",
    "tslint-config-prettier": "1.18.0"
  }
}
